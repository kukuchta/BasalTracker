<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemUiSegmentRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Time range, e.g. "08:00–12:00" -->
    <TextView
        android:id="@+id/tvRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00:00–24:00"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- Dose info, e.g. "Dawka: 0.80 U/h" -->
    <TextView
        android:id="@+id/tvRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dawka: 0.80 U/h"
        app:layout_constraintStart_toStartOf="@id/tvRange"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        app:layout_constraintTop_toBottomOf="@id/tvRange"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"/>

    <!-- One atomic edit action (opens dialog: dose + end hour) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdit"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edytuj"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
